{% extends 'base.html.twig' %}

{% block title %}Jacadi - Inscription
{% endblock %}

{% block body %}

	<section class="j-section js-page-content">
		<div class="j-homeCover" style="background-image: url('{{ asset('images/backgroundImages/doudou.jpg') }}')">
			<img class="j-homeLogo" src="{{ asset('images/Logo/Logo.png')}}">
		</div>

		<div class="j-articles" style="background-image: url('{{ asset('images/backgroundImages/ciment-texture_1194-6501.jpeg') }}')">
			<a href=" {{ path('home') }} " class="j-linkPage__Parent">
				<div class="j-linkPage">
					<i class="fa-solid fa-chevron-right j-linkPage__icon"></i>
					<p class="j-linkPage__text">Retour à l'accueil</p>
				</div>
			</a>
			<div class="j-register">
				<h3>Activer votre compte</h3>
				<p>Bonjour
					{{ user.email }}</p>
				<p>Votre inscription sur le site Jacadi est à valider en cliquant sur le lien ci-dessous</p>
				<p>
					<a href="#">Lien</a>
				</p>
				<p>Ce lien expirera dans 3 heures</p>
			</div>
		</div>
	</section>
{% endblock %}
