{% extends 'base.html.twig' %}

{% block title %}Jacadi - Réinitialisation du mot de passe
{% endblock %}

{% block body %}

	<section class="j-section js-page-content">
		<div class="j-homeCover" style="background-image: url('{{ asset('images/backgroundImages/doudou.jpg') }}')">
			<img class="j-homeLogo" src="{{ asset('images/Logo/Logo.png')}}">
		</div>

		<div class="j-resetPasswordParent" style="background-image: url('{{ asset('images/backgroundImages/ciment-texture_1194-6501.jpeg') }}')">
			<div class="j-resetPassword">
				<h3>Réinitialisation du mot de passe</h3>

				{# Dans twig permet de récupérer un formulaire {{form(nom du formulaire à récupérer)}}#}
				{{ form_start(requestPassForm) }}
				{{ form_row(requestPassForm.email) }}
				<button type="submit">Envoyer</button>
				{{ form_end(requestPassForm) }}
			</div>
		</div>
	</section>
{% endblock %}
